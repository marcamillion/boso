<h1>Listing answers</h1>

<table>
  <tr>
    <th>So</th>
    <th>Creation date</th>
    <th>Is accepted</th>
    <th>Question</th>
    <th>Owner</th>
    <th>Score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.so_id %></td>
    <td><%= answer.creation_date %></td>
    <td><%= answer.is_accepted %></td>
    <td><%= answer.question_id %></td>
    <td><%= answer.owner %></td>
    <td><%= answer.score %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

